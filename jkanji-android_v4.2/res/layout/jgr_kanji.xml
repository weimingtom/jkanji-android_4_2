<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF"
    >

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:background="@drawable/actionbar_background"
        >
    </com.markupartist.android.widget.ActionBar>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/frameLayoutOutput"
        >
        
        <ScrollView 
            android:background="#FFFFFF"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:id="@+id/scrollViewLoading"
            >
	       	<LinearLayout
	       	    android:id="@+id/progressLayout"
	           	android:layout_width="match_parent"
	           	android:layout_height="wrap_content"
	           	android:layout_gravity="center"
	           	android:layout_weight="1"
	           	android:orientation="vertical"
	           	> 
	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_gravity="center"
	                android:layout_width="200.0dp" 
	                android:layout_height="200.0dp"
	                android:padding="5dp"
	                android:src="@drawable/loading001_1" 
	                />
	            <!-- 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="加载中"
		            android:textColor="#000000"
		            />
		         -->
			</LinearLayout>
	    </ScrollView>
	    
        <LinearLayout
            android:id="@+id/linearLayoutOutput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
			android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
				android:id="@+id/linearLayoutSearch"
                >      
	            <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal"
					android:visibility="visible"
		            >
	
		            <EditText
		                android:id="@+id/editTextKanji"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="2" 
		                >
		            </EditText>
	
		            <Button
		                android:id="@+id/buttonChange"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="变换" 
		                />
					
		            <Button
		                android:id="@+id/buttonSearch"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="搜索" 
		                />
		            
		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal"
					android:visibility="visible"
					android:id="@+id/linearLayoutSearch"
		            >

		            <CheckBox
		                android:id="@+id/checkBoxJumpSearch"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="搜索器" 
		                android:textColor="#000000"
		                />
		            
		            <Button
		                android:id="@+id/buttonClear"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="清空" 
		                />
		            
		        </LinearLayout>
	        </LinearLayout>
	        <TextView
	            android:id="@+id/textViewKanjiDetail"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="注意：长按跳转至搜索器"
	            android:textColor="#000000"
	            />
			<GridView
			        android:id="@+id/gridView1"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:numColumns="5"
			        >
			</GridView>	       	
        </LinearLayout>
     </FrameLayout>
    
</LinearLayout>
